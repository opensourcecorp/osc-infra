pipeline {
  agent any
  stages {
    stage('Lint (GH Super-Linter)') {
      agent {
        docker {
          image 'docker.io/github/super-linter:slim-v4'
          args '''
            -v "${PWD}":/tmp/lint \
            -e RUN_LOCAL=true \
            -e USE_FIND_ALGORITHM=true \
            -e IGNORE_GITIGNORED_FILES=true \
            -e FILTER_REGEX_EXCLUDE='testdata.*' \
            -e FILTER_REGEX_EXCLUDE='.*\\.vmdk|.*\\.ovf|.*\\.box|.*\\.iso' \
            -e VALIDATE_GO=false \
            -e VALIDATE_NATURAL_LANGUAGE=false
          '''
        }
      }
      steps {
        sh '''
          true
        '''
      }
    }
    stage('Lint (rhad)') {
      agent {
        docker {
          image 'ghcr.io/opensourcecorp/rhad:latest'
          args '''
            -v "${PWD}":/home/rhad/src
          '''
          // reuseNode true
        }
      }
      steps {
        sh '''
          /home/rhad/rhad-src/rhad lint
        '''
      }
    }
    // stage('Test') {}
    // stage('Build') {}
    // stage('Push') {}
    // stage('Deploy') {}
  }
}
